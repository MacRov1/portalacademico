      <!DOCTYPE html>
      <html lang="es">
      <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Administradores Pendientes</title>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
      </head>
      <body class="bg-gradient-to-br from-blue-50 via-white to-blue-100 min-h-screen flex flex-col font-sans">

        <!-- Navbar -->
        <nav class="bg-white shadow-md sticky top-0 z-10">
          <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
            <h1 class="text-xl font-bold text-blue-600">Administradores Pendientes</h1>
            <a href="/auth/admin" class="text-blue-500 font-medium hover:text-blue-600 transition">Volver al Dashboard</a>
          </div>
        </nav>

        <!-- Contenido -->
        <main class="flex-grow container mx-auto px-4 py-8">
          <h2 class="text-3xl font-extrabold text-gray-800 mb-6 text-center">Administradores Pendientes de AprobaciÃ³n</h2>

          <% if (!pendingAdmins || pendingAdmins.length === 0) { %>
            <p class="text-gray-500 text-center">No hay administradores pendientes.</p>
          <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% pendingAdmins.forEach(admin => { %>
                <div class="bg-white shadow-xl rounded-2xl p-6 flex flex-col justify-between hover:shadow-2xl transition">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= admin.username %></h3>
                    <p class="text-gray-500 mb-1"><span class="font-medium">Email:</span> <%= admin.email %></p>
                    <p class="text-gray-500 mb-3"><span class="font-medium">Registrado el:</span> <%= admin.createdAt.toLocaleDateString() %></p>
                  </div>
                  <form action="/auth/approve-admin/<%= admin._id %>" method="POST" class="mt-4">
                    <button type="submit" 
                            class="w-full py-2 px-4 bg-green-600 text-white font-medium rounded-lg shadow hover:bg-green-700 transform hover:-translate-y-0.5 transition duration-300">
                      Aprobar
                    </button>
                  </form>
                </div>
              <% }) %>
            </div>
          <% } %>
        </main>

      </body>
      </html>
